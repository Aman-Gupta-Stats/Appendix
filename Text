import pandas as pd
from openpyxl import load_workbook

# 1) Write your DataFrame without merging:
temp.to_excel('tm_unmerged.xlsx', merge_cells=False)

# 2) Re-open, drop row 3 & col 1, then merge A1:A2:
wb = load_workbook('tm_unmerged.xlsx')
ws = wb.active

# delete the now-unwanted row and column
ws.delete_rows(3)    # drops the entire third row
ws.delete_cols(1)    # drops the first column (pandas auto-index)

# merge the top two cells in column A
ws.merge_cells(start_row=1, start_column=1, end_row=2, end_column=1)

# re-center the header text
cell = ws.cell(row=1, column=1)
cell.value = "Band"
cell.alignment = cell.alignment.copy(horizontal="center", vertical="center")

wb.save('tm_final.xlsx')